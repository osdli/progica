                                                                            {{ equipementExt.name }}
                                                                        </label>
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--------------------------- FIN CRITERES Equipement -------------------------->


                                <!--------------------------- CRITERES Service -------------------------->
                                <p>
                                    <button class="boutonDepliant btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#multiCollapseExample2" aria-expanded="false"
                                            aria-controls="multiCollapseExample2">
                                        Critère de service &darr;
                                    </button>
                                </p>
                                <div class="row">
                                    <div class="col">
                                        <div class="collapse multi-collapse" id="multiCollapseExample2">
                                            <div class="card card-body">
                                                {% for service in services %}
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value=""
                                                               id="defaultCheck3">
                                                        <label class="form-check-label" for="defaultCheck1">
                                                            {{ service.name }}
                                                        </label>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--------------------------- FIN CRITERES Service -------------------------->

                                <!--------------------------- FIN CRITERES SUPPLEMENTAIRES -------------------------->


                                <!--------------------------- FIN BOUTON DE RECHERCHE -------------------------->

                                <div class="form-btn">
                                    <a href="{{ path('app_search') }}" class="submit-btn">Lancer la recherche</a>
                                </div>
                                <!--------------------------- FIN BOUTON DE RECHERCHE -------------------------->


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script>
        $('.region a').click(function () {
            $('#selectedR').text($(this).text());
        });

        $('.departement a').click(function () {
            $('#selectedD').text($(this).text());
        });

        $('.ville a').click(function () {
            $('#selectedV').text($(this).text());
        });
    </script>

    {% endblock %}
