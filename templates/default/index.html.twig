                                <!--------------------------- CRITERES SUPPLEMENTAIRES -------------------------->
                                <span class="form-label">Critères supplémentaires</span>

                                <!--------------------------- CRITERES Equipement -------------------------->
                                <p>
                                    <button class="boutonDepliant btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#multiCollapseExample1" aria-expanded="false"
                                            aria-controls="multiCollapseExample1">
                                        Critère d'équipement &darr;
                                    </button>
                                </p>
                                <div class="row">
                                    <div class="col">
                                        <div class="collapse multi-collapse" id="multiCollapseExample1">
                                            <div class="card card-body">
                                                <div class="accordion" id="accordionExample">
                                                    <div class="card">
                                                        <div class="card-header" id="headingOne">
                                                            <h5 class="mb-0">
                                                                <button class="boutonDepliant btn btn-link"
                                                                        type="button" data-toggle="collapse"
                                                                        data-target="#collapseOne" aria-expanded="false"
                                                                        aria-controls="collapseOne">
                                                                    Intérieur &darr;
                                                                </button>
                                                            </h5>
                                                        </div>

                                                        <div id="collapseOne" class="collapse"
                                                             aria-labelledby="headingOne"
                                                             data-parent="#accordionExample">
                                                            <div class="card-body">
                                                                {% for equipementInt in equipementsInt %}
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="checkbox"
                                                                               value="" id="defaultCheck1">
                                                                        <label class="form-check-label"
                                                                               for="defaultCheck1">
                                                                            {{ equipementInt.name }}
                                                                        </label>
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="card">
                                                        <div class="card-header" id="headingTwo">
                                                            <h5 class="mb-0">
                                                                <button class="boutonDepliant btn btn-link collapsed"
                                                                        type="button" data-toggle="collapse"
                                                                        data-target="#collapseTwo" aria-expanded="false"
                                                                        aria-controls="collapseTwo">
                                                                    Extérieur &darr;
                                                                </button>
                                                            </h5>
                                                        </div>
                                                        <div id="collapseTwo" class="collapse"
                                                             aria-labelledby="headingTwo"
                                                             data-parent="#accordionExample">
                                                            <div class="card-body">
                                                                {% for equipementExt in equipementsExt %}
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="checkbox"
                                                                               value="" id="defaultCheck2">
                                                                        <label class="form-check-label"
