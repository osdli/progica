{% block body %}

{% endblock %}


<!--</footer>-->
<footer class="bg-dark text-center text-white fixed-bottom">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
        <!-- Section: Social media -->
        <section class="mb-4">
            <!-- Facebook -->
            <a class="btn btn-outline-light btn-floating m-1" href="{{ asset ('assets/images/logo-facebook.png') }}" role="button"
            ><i class="fab fa-facebook-f"></i
                ></a>

            <!-- Twitter -->
            <a class="btn btn-outline-light btn-floating m-1" href="../assets/images/twitter.png" role="button"
            ><i class="fab fa-twitter"></i
                ></a>


            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="../assets/images/youtub.jpg" role="button"
            ><i class="-youtube"></i
                ></a>

            <!-- Linkedin -->
            <a class="btn btn-outline-light btn-floating m-1" href="../assets/images/linkeding.jpg" role="button"
            ><i class="fab fa-linkedin-in"></i
                ></a>


        </section>
        <!-- Section: Social media -->
